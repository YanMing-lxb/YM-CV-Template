% ============================================= 自定义表格 ============================================

\newcommand{\resumePOR}[3]{ % 定义一个自定义命令，用于创建项目经历的条目
    \vspace{0.5mm}\item % 调整垂直间距
    \begin{tabular*}{0.97\textwidth}[t]{l@{\extracolsep{\fill}}r} % 创建一个表格，设置列宽和对齐方式
        \textbf{#1},\hspace{0.3mm}#2 & \textit{\small{#3}} 
    \end{tabular*}
    \vspace{-2mm} % 调整垂直间距
}

\newcommand{\resumeSubheading}[4]{ % 定义一个自定义命令，用于创建教育经历或工作经历的条目
    \vspace{0.5mm}\item % 调整垂直间距
    \begin{tabular*}{0.98\textwidth}[t]{l@{\extracolsep{\fill}}r} % 创建一个表格，设置列宽和对齐方式
        \textbf{#1} & \textit{\footnotesize{#2}} \\ 
        & \textbf{\footnotesize{#3}} \\ % 同上
        \multicolumn{2}{p{0.98\linewidth}}{\footnotesize{#4}} % 同上
    \end{tabular*}
    \vspace{-2.4mm} % 调整垂直间距
}

\newcommand{\resumeProject}[3]{ % 定义一个自定义命令，用于创建项目经验的条目
    \vspace{0.5mm}\item % 调整垂直间距
    \begin{tabular*}{0.98\textwidth}[t]{l@{\extracolsep{\fill}}r} % 创建一个表格，设置列宽和对齐方式
        \textbf{#1} & \textit{\footnotesize{#2}} \\ 
        & \textbf{\footnotesize{#3}} 
    \end{tabular*}
    \vspace{-2.4mm} % 调整垂直间距
}

\newcommand{\resumeResearchResults}[2]{ % 定义一个自定义命令，用于创建研究成果的条目
    \vspace{0.5mm}\item % 调整垂直间距
    \begin{tabular*}{0.98\textwidth}[t]{l@{\extracolsep{\fill}}r} % 创建一个表格，设置列宽和对齐方式
        \textbf{#1} & \textit{\footnotesize{#2}} \\
    \end{tabular*}
    \vspace{-2.4mm} % 调整垂直间距
}


